{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "experimentalDecorators": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "noUncheckedIndexedAccess": true,
        "typeRoots": ["node_modules/@types", "typings", "reflect-metadata"],
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"]
}